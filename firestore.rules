
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow authenticated users to read and write to the raw data collections.
    // This is necessary for the client-triggered sync to store data.
    match /rawCampaigns/{docId} {
      allow read, write: if request.auth != null;
    }
    match /rawStats/{docId} {
      allow read, write: if request.auth != null;
    }
    match /rawLists/{docId} {
      allow read, write: if request.auth != null;
    }
    match /rawUnsubscribers/{docId} {
      allow read, write: if request.auth != null;
    }

    // Allow authenticated users to read job status.
    // The server cron jobs will have admin access to write status.
    match /jobStatus/{jobId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Allow client to write for manual syncs
    }

    // Allow authenticated users to run diagnostics.
    match /diagnostics/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
