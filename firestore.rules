rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow server-side functions (via Admin SDK) to write to these collections.
    // Client-side reads are allowed for authenticated users.
    match /rawCampaigns/{campaignId} {
      allow read: if request.auth != null;
      allow write: if request.auth == null; // Allow server-side writes
    }

    match /rawStats/{statId} {
      allow read: if request.auth != null;
      allow write: if request.auth == null; // Allow server-side writes
    }

    // Diagnostics should only be writeable/readable by the user who created them.
    match /diagnostics/{docId} {
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Default deny all other writes, allow authenticated reads.
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if false; 
    }
  }
}
