
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default: Deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read from specific "raw" data collections.
    match /rawCampaigns/{id} {
        allow read: if request.auth != null;
    }
    match /rawStats/{id} {
        allow read: if request.auth != null;
    }
    match /rawLists/{id} {
        allow read: if request.auth != null;
    }
    match /rawUnsubscribes/{id} {
        allow read: if request.auth != null;
    }
    
    // Allow authenticated users to read the job status.
    match /jobStatus/{id} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to read and write to the diagnostics collection
    // for testing purposes, but only their own documents.
    match /diagnostics/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
