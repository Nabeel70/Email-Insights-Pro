
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow read access to any authenticated user for all collections
    match /{document=**} {
      allow read: if request.auth != null;
    }

    // Allow authenticated users to write to the 'diagnostics' collection,
    // but only if the document's 'userId' matches their own UID.
    // This is a good security practice.
    match /diagnostics/{docId} {
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Allow server-side processes (authenticated by App Hosting) to write
    // to the 'dailyReports' collection.
    // When using the client SDK on the server, request.auth is null, so we can't check it.
    // In a real app, you might want more specific rules here.
    match /dailyReports/{reportId} {
        allow write: if request.auth == null; // For server-side sync
        allow write: if request.auth != null; // Allow client-side writes if needed
    }
  }
}
