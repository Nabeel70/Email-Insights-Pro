
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default: Deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow any authenticated user to read from any collection.
    // This simplifies data fetching for the client.
    match /{path=**}/_ {
        allow read: if request.auth != null;
    }

    // Allow authenticated users to write to specific "raw" data collections.
    // This allows the client-side sync functionality to store data from the API.
    match /rawCampaigns/{id} {
        allow read, write: if request.auth != null;
    }
    match /rawStats/{id} {
        allow read, write: if request.auth != null;
    }
    match /rawLists/{id} {
        allow read, write: if request.auth != null;
    }
    match /rawUnsubscribes/{id} {
        allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to write to the diagnostics collection for testing.
    match /diagnostics/{docId} {
      allow write: if request.auth != null;
    }

    // Allow authenticated users to read the status of automated jobs.
    match /jobStatus/{jobId} {
      allow read: if request.auth != null;
    }
  }
}
