
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow server-side functions (e.g., sync, diagnostics) to write.
    // App Hosting authenticates these requests automatically.
    match /dailyReports/{reportId} {
      allow read, write: if request.auth != null;
    }

    match /diagnostics/{testId} {
      allow read, write: if request.auth != null;
    }

    // Allow any authenticated user to read from other collections, but not write.
    // This provides a secure default.
    match /{document=**} {
       allow read: if request.auth != null;
       allow write: if false;
    }
  }
}
