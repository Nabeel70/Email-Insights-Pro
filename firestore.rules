rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default: Deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read and write to "raw" data collections.
    // This allows the client-side sync functionality to work.
    match /rawCampaigns/{id} {
        allow read, write: if request.auth != null;
    }
    match /rawStats/{id} {
        allow read, write: if request.auth != null;
    }
    match /rawLists/{id} {
        allow read, write: if request.auth != null;
    }
    match /rawUnsubscribes/{id} {
        allow read, write: if request.auth != null;
    }

    // Allow authenticated users to read the job status.
    match /jobStatus/{id} {
      allow read: if request.auth != null;
    }

    // Allow authenticated users to write and read their own test documents
    // in the diagnostics collection.
    match /diagnostics/{docId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
