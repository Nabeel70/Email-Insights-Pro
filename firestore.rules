rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any authenticated user to read any document
    match /{document=**} {
      allow read: if request.auth != null;
    }

    // Allow authenticated users to write to the diagnostics collection
    // This allows the diagnostics page to test Firestore connectivity.
    match /diagnostics/{docId} {
      allow write: if request.auth != null;
    }

    // Allow authenticated users to write to rawCampaigns and rawStats
    // This allows the client-side sync functionality to store data.
    match /rawCampaigns/{campaignId} {
        allow write: if request.auth != null;
    }
    
    match /rawStats/{statId} {
        allow write: if request.auth != null;
    }
  }
}
