rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to write to diagnostics, but only their own docs
    match /diagnostics/{docId} {
      allow write: if request.auth != null && isOwner(request.resource.data.userId);
      allow read: if request.auth != null && isOwner(resource.data.userId);
    }
    
    // Allow any authenticated user to write to the raw data collections
    match /rawCampaigns/{campaignId} {
      allow write: if request.auth != null;
    }
    match /rawStats/{statId} {
      allow write: if request.auth != null;
    }

    // Allow read access to any authenticated user for all other documents
    match /{document=**} {
      allow read: if request.auth != null;
      // Explicitly deny writes to any other collection unless specified above
      allow write: if false; 
    }
  }
}
